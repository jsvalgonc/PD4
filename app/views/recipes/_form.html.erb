
<%= form_for(@recipe) do |f| %>
  <div id="page">
  <div id="page2">
  <div id="header">
    <%= image_tag("logo.jpg", :class => "logo")%>
    <div id="header-title">PD4.</div>
  </div>
  <%= render "shared/pd4Cabecalho" %>
  <%= render "shared/pd4menu" %>
  <h1>
    <div id="h1-receita">Receita</div>
    <div id="h1-titulo" class="field">
    <%= f.text_field :title %></div>
  </h1>
  <p></p>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <br>


  <div id="content">
    <div id="content-serves">
      <table id="table-serves">
        <tr>
          <td>
            Tempo de Preparação
          </td>
          <td>
            Tempo de Cozedura
          </td>
          <td>
            Ingredientes para 
          </td>
        </tr>
        <tr>
          <td><%= f.text_field :preparationTime %> minutos</td>
          <td><%= f.text_field :cookingTime %> minutos</td>
          <td><%= f.text_field :serves %> pessoas</td>
        </tr>
      </table>
    </div>
</div>

<table>
<tr><td>Ingrediente</td><td>Quantidade</td></tr><td> </td>
   <%= f.fields_for(:recipe_ingredients) do |builder| %>  
    <%= render 'recipe_ingredients', :f => builder %> 
  <% end %>
</table>

<div class="fields">  
<%=  link_to_add_fields2 "Adiciona ingredientes", f, :recipe_ingredients %></p>
</div>

<div class="field">
    <%= f.label 'Procedimento' %><br>
    <%= f.text_area :procedure, cols: 40, rows: 15 %>
  </div>

  
  <div class="actions">
    <%= f.submit %>
  </div>
  </div>
  </div>

<% end %>

