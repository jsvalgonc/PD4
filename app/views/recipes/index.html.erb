<h1>Receitas</h1>

<table>
  <thead>
    <tr>
      <th>Receita</th>

      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= link_to 'Mostrar', recipe %></td>
        <td><%= link_to 'Editar', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Apagar', recipe, method: :delete, data: { confirm: 'Tem a certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Receita', new_recipe_path %>
